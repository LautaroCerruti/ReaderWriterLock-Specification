% Verification conditions for reader-writer-lock-v2.slog

% Run check_vcs_reader-writer-lock-v2 to see if the program verifies all the VCs

:- type_check.

:- reset_types.

:- consult('reader-writer-lock-v2.slog').

:- notype_check.

:- prolog_call((
    retractall(all_unsat_vc(_,_,_,_,_,_)),
    retractall(dinvariant(_,_,_)),
    retractall(daxiom(_,_,_)),
    retractall(dinitial(_,_)),
    retractall(dparameters(_)),
    retractall(dvariables(_)),
    (exists_file('reader-writer-lock-v2-all.pl') ->
       open('reader-writer-lock-v2-all.pl',read,StreamVC)
    ;
       print_notfile('reader-writer-lock-v2-all.pl')
    ),
    style_check(-singleton),
    setlog:consult_vc(StreamVC),
    style_check(+singleton),
    close(StreamVC))).

% Change this number for a different timeout (ms)
def_to(60000).

:- prolog_call(nb_setval(vc_num,0)).
:- prolog_call(nb_setval(vc_ok,0)).
:- prolog_call(nb_setval(vc_err,0)).
:- prolog_call(nb_setval(vc_to,0)).
:- prolog_call(nb_setval(vc_time,0)).

:- prolog_call(dynamic(unsat_sol/6)).
:- prolog_call(dynamic(vc_proved/1)).

readersWriterLockInit_sat_invMaxReadersPositive :-
  readersWriterLockInit(Readers,Writer,MaxReaders) &
  invMaxReadersPositive(MaxReaders).

readersWriterLockInit_sat_invReadersLessThanMaxReaders :-
  readersWriterLockInit(Readers,Writer,MaxReaders) &
  invReadersLessThanMaxReaders(Readers,MaxReaders).

readersWriterLockInit_sat_invNoReadersWhileWriter :-
  readersWriterLockInit(Readers,Writer,MaxReaders) &
  invNoReadersWhileWriter(Writer,Readers).

setMaxReaders_is_sat :-
  setMaxReaders(Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) & 
  delay([Readers,Writer,MaxReaders] neq [Readers_,Writer_,MaxReaders_],false).

setMaxReaders_pi_invMaxReadersPositive(MaxReaders,Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) :-
  % here conjoin other ax/inv as hypotheses if necessary
  neg(
    invMaxReadersPositive(MaxReaders) &
    setMaxReaders(Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) implies
    invMaxReadersPositive(MaxReaders_)
  ).

setMaxReaders_pi_invReadersLessThanMaxReaders(Readers,MaxReaders,Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) :-
  % here conjoin other ax/inv as hypotheses if necessary
  neg(
    invReadersLessThanMaxReaders(Readers,MaxReaders) &
    setMaxReaders(Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) implies
    invReadersLessThanMaxReaders(Readers_,MaxReaders_)
  ).

setMaxReaders_pi_invNoReadersWhileWriter(Writer,Readers,Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) :-
  % here conjoin other ax/inv as hypotheses if necessary
  neg(
    invNoReadersWhileWriter(Writer,Readers) &
    setMaxReaders(Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_) implies
    invNoReadersWhileWriter(Writer_,Readers_)
