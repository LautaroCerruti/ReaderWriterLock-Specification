update_time(Tf,Ti) :-
  prolog_call(
    (nb_getval(vc_time,VCT),
     VCT_ is VCT + Tf - Ti,
     nb_setval(vc_time,VCT_)
    )
  ).

update_count(C) :-
  prolog_call(
    (nb_getval(C,VCN),
     VCN_ is VCN + 1,
     nb_setval(C,VCN_)
    )
  ).

check_sat_vc(VCID) :-
  prolog_call((setlog:vc_proved(VCID) -> R = proved ; R = unproved)) &
  (R == unproved &
   write('\nChecking ') & write(VCID) & write(' ... ') &
   update_count(vc_num) &
   ((prolog_call(setlog(VCID)) &
    update_count(vc_ok) &
    prolog_call(assertz(vc_proved(VCID))) &
    write_ok)!
    or
    update_count(vc_err) &
    write_err
   )
   or
   R == proved
  ).

check_unsat_vc(VCID,TO,Opt) :-
  prolog_call(
    (VCID =.. [H | _],
     (\+setlog:vc_proved(H) ->
        setlog:all_unsat_vc(H,T,ID,VC,Op,VN),
        copy_term([VC,VN],[VCC,VNC]),
        write('\nChecking '), write(H), write(' ... '), flush_output,
        setlog(update_count(vc_num)),
        get_time(Ti),
        rsetlog(VC,TO,Cons,Res,Opt),
        get_time(Tf)
     ;
        Res = proved
     )
    )
  ) &
  ((Res = failure)! &
    update_count(vc_ok) &
    update_time(Tf,Ti) &
    prolog_call((retractall(setlog:unsat_sol(_,H,_,_,_,_)),
                 assertz(vc_proved(H)))) &
    write_ok
  or
   (Res = timeout)! &
    update_count(vc_to) &
    write_to
  or
    (Res = proved)!
  or
    update_count(vc_err) &
    prolog_call((term_string(VCC,VCS,[variable_names(VNC)]),
                 rsetlog_str(VCS,VNC,TO,_,_,[groundsol]))) &
    prolog_call((retractall(setlog:unsat_sol(_,H,_,_,_,_)),
                 assertz(unsat_sol(T,H,ID,Cons,VN,VNC)))) &
    write_err
  ).

write_ok :-
  prolog_call(ansi_format([bold,fg(green)],'OK',[])).

write_to :-
  prolog_call(ansi_format([bold,fg(255,255,50)],'TIMEOUT',[])).

write_err :-
  prolog_call(ansi_format([bold,fg(red)],'ERROR',[])).

check_vcs_reader-writer-lock-v2 :-
   def_to(TO) &
   prolog_call(setlog(check_aux(TO,[])!)).

check_vcs_reader-writer-lock-v2(Opt) :-
   def_to(TO) &
   prolog_call(setlog(check_aux(TO,Opt)!)).

check_vcs_reader-writer-lock-v2(TO,Opt) :-
   prolog_call(setlog(check_aux(TO,Opt)!)).

check_aux(TO,Opt) :-
  prolog_call(
    (retractall(unsat_sol(_,_,_,_,_,_)),
     nb_setval(vc_num,0),
     nb_setval(vc_time,0),
     nb_setval(vc_ok,0),
     nb_setval(vc_err,0),
     nb_setval(vc_to,0)
    )
  ) &
  check_sat_vc(readersWriterLockInit_sat_invMaxReadersPositive) &
  check_sat_vc(readersWriterLockInit_sat_invReadersLessThanMaxReaders) &
  check_sat_vc(readersWriterLockInit_sat_invNoReadersWhileWriter) &
  check_sat_vc(setMaxReaders_is_sat) &
  check_sat_vc(acquireRead_is_sat) &
  check_sat_vc(acquireWrite_is_sat) &
  check_sat_vc(releaseRead_is_sat) &
  check_sat_vc(releaseWrite_is_sat) &
  check_unsat_vc(setMaxReaders_pi_invMaxReadersPositive(MaxReaders,Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(setMaxReaders_pi_invReadersLessThanMaxReaders(Readers,MaxReaders,Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(setMaxReaders_pi_invNoReadersWhileWriter(Writer,Readers,Readers,Writer,MaxReaders,N,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(acquireRead_pi_invMaxReadersPositive(MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(acquireRead_pi_invReadersLessThanMaxReaders(Readers,MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(acquireRead_pi_invNoReadersWhileWriter(Writer,Readers,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(acquireWrite_pi_invMaxReadersPositive(MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(acquireWrite_pi_invReadersLessThanMaxReaders(Readers,MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(acquireWrite_pi_invNoReadersWhileWriter(Writer,Readers,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(releaseRead_pi_invMaxReadersPositive(MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(releaseRead_pi_invReadersLessThanMaxReaders(Readers,MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(releaseRead_pi_invNoReadersWhileWriter(Writer,Readers,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(releaseWrite_pi_invMaxReadersPositive(MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(releaseWrite_pi_invReadersLessThanMaxReaders(Readers,MaxReaders,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  check_unsat_vc(releaseWrite_pi_invNoReadersWhileWriter(Writer,Readers,Readers,Writer,MaxReaders,P,Res,Readers_,Writer_,MaxReaders_),TO,Opt) &
  prolog_call(
    (nb_getval(vc_num,VCN),
     nb_getval(vc_time,VCT),
     nb_getval(vc_ok,VCOK),
     nb_getval(vc_err,VCE),
     nb_getval(vc_to,VCTO)
    )
  ) &
  nl & nl &
  write("Total VCs: ") & write(VCN) &
  write(" (discharged: ") & write(VCOK) &
  write(", failed: ") & write(VCE) &
  write(", timeout: ") & write(VCTO) & write(")") & nl &
  write("Execution time (discharged): ") & write(VCT) & write(" s").

:- nl & prolog_call(ansi_format([bold,fg(green)],'Type checking has been deactivated.',[])) & nl & nl.

:- nl & prolog_call(ansi_format([bold,fg(green)],'Call check_vcs_reader-writer-lock-v2 to run the verification conditions.',[])) & nl & nl.

